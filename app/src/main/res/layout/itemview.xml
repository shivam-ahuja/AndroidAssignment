<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<ImageView android:layout_height="100dp"
    android:layout_width="100dp"
    android:id="@+id/myflag"
    android:layout_margin="10dp"

    android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="aaaaaaaaaaaaaaaaaa"
        android:id="@+id/myrank"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/myflag" />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:text="ddddddddddddddddddddddddddddddddddd"
        android:id="@+id/myname"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/myrank"
        android:layout_toEndOf="@+id/myflag" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mypopulation"
        android:text="daaaaaaaaaaaaaaaaaaaaaa"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/myname"
        android:layout_toEndOf="@+id/myflag" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/myflag"
        android:background="#121300"
        android:id="@+id/view"
        />
</RelativeLayout>